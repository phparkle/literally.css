{
  "name": "literally.css",
  "version": "0.0.2",
  "description": "A CSS utility library where classes are literally translated into styles.",
  "engines": {
    "node": ">= 16"
  },
  "browserslist": "defaults",
  "targets": {
    "generator": {
      "context": "node"
    },
    "css": {
      "context": "browser",
      "sourceMap": false
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "compile": "parcel build src/index.js --target generator",
    "generate": "node dist/generator/index.js",
    "preprocess": "parcel build dist/generator/literally.css --target css",
    "build": "pnpm clean && pnpm compile && pnpm generate && pnpm preprocess",
    "watch": "nodemon --exec \"pnpm build\" --watch src -e js,json,yml"
  },
  "keywords": [
    "css",
    "utility"
  ],
  "author": "Parkle Lee <phparkle@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@parcel/transformer-yaml": "^2.6.2",
    "nodemon": "^2.0.19",
    "parcel": "^2.6.2",
    "rimraf": "^3.0.2"
  }
}
